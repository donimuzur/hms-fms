                                                            <label class="control-label">CTF Date</label>
                                                            @Html.TextBoxFor(model => model.CreatedDate, "{0:dd-MMM-yyyy}", new { @class = "form-control ", @readonly = "readonly" })
                                                        </div>
                                                    </div>

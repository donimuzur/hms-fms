            <div class="row col-md-12">
                @if (Model.DocumentStatus == Enums.DocumentStatus.Draft)
                {
                    <a href="#" class="btn btn-primary" onclick="SendCtf(@Model.TraCtfId)"><i class="glyphicon glyphicon-ok"></i> Send</a>
                    <input type="submit" value="Save" class="btn btn-primary" id="btnSubmit" />
                }

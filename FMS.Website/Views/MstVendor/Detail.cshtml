@using FMS.Core;
@model FMS.Website.Models.VendorItem

<div class="opt-content clearfloat">
    <h5 class="title-page">Master Data Vendor</h5>
</div>
<section class="content">
    <div class="wpanel">
    @using (Html.BeginForm("Edit", "MstVendor"))
    {
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label">Vendor Name<span class="red">*</span></label>
                    @Html.HiddenFor(model => model.MstVendorId)
                    @Html.HiddenFor(model => model.CreatedBy)
                    @Html.HiddenFor(model => model.CreatedDate)
                    @Html.TextBoxFor(model => model.VendorName, new { @class = "form-control ", required = "required", @disabled = "disabled" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label">Short Name<span class="red">*</span></label>
                    @Html.TextBoxFor(model => model.ShortName, new { @class = "form-control ", required = "required", @disabled = "disabled" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label">Email Address<span class="red">*</span></label>
                    @Html.TextBoxFor(model => model.EmailAddress, new { @class = "form-control ", required = "required", @disabled = "disabled" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label">Status<span class="red"></span></label>
                    <div class="form-control" disabled = "disabled">
                        @Html.CheckBoxFor(model => model.IsActive, new { @disabled = "disabled" })
                        @Html.Label("Active", new { @id = "lblStatus" })
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <a href="@Url.Action("Index", "MstVendor" )" class="btn btn-default">Back</a>
            </div>
        </div>
    }
    </div>
    <div id="changes" class="tab-pane">
        @Html.Partial("_ChangesLog");
    </div>
</section>

<script type="text/javascript">
    $(function () {
        if ($('.title-page').html() == 'Master Data Vendor') {
            $('#MstVendorMenu').addClass('active');
        }
    });
</script>
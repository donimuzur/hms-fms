@using FMS.Core
@model FMS.Website.Models.RemarkItem

<div class="opt-content clearfloat">
    <h5 class="title-page">Master Data Remark</h5>
</div>
<section class="content">
    <div class="wpanel">
    <label class="label-warning">@Model.ErrorMessage</label>
    @using (Html.BeginForm("Edit", "MstRemark"))
    {
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label">Document Type<span class="red">*</span></label>
                    @Html.HiddenFor(model => model.MstRemarkId)
                    @Html.HiddenFor(model => model.CreatedDate)
                    @Html.HiddenFor(model => model.CreatedBy)
                    @Html.DropDownListFor(model => model.DocumentType, Model.DocumentTypeList, new { @class = "form-control", @required = "required" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label">Remark<span class="red">*</span></label>
                    @Html.TextBoxFor(model => model.Remark, new { @class = "form-control", @required = "required" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label">RoleType<span class="red">*</span></label>
                    @Html.DropDownListFor(model => model.RoleType, Model.RoleTypeList, new { @class = "form-control", @required = "required" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label">Status<span class="red">*</span></label>
                    <div class="form-control">
                        @Html.CheckBoxFor(model => model.IsActive)
                        @Html.Label("Active", new { @id = "lblStatus" })
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a href="@Url.Action("Index", "MstRemark" )" class="btn btn-default">Back</a>
            </div>
        </div>
    }
    </div>
    <div id="changes" class="tab-pane">
        @Html.Partial("_ChangesLog");
    </div>
</section>
<script type="text/javascript">
    $(document).ready(function () {
        $('aside').animate({
            scrollTop: $("#MstRemark").offset().top
        }, 1000);

        if ($('.title-page').html() == 'Master Data Remark') {
            $('#MstRemarkMenu').addClass('active');
        }
    });
</script>
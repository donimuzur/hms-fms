@using FMS.Core;
@model FMS.Website.Models.ComplaintCategoryItem

<div class="opt-content clearfloat">
    <h5 class="title-page"> Master Data Complaint Category Create</h5>
</div>
<section class="content">
    <div class="wpanel">
    <label class="label-warning">@Model.ErrorMessage</label>
    @using (Html.BeginForm("Create", "MstComplaint"))
        {
        <div class="row col-md-12">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label">Category Name<span class="red">*</span></label>
                    @Html.TextBoxFor(model => model.CategoryName, new { @class = "form-control", @required = "required" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label">Role Type Name<span class="red">*</span></label>
                    @Html.DropDownListFor(model => model.RoleType, Model.RoleTypeList, new { @class = "form-control", @required = "required" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label">Status<span class="red">*</span></label>
                    <div class="form-control">
                        @Html.CheckBoxFor(model => model.IsActive, new { @required = "required" })
                        @Html.Label("Active", new { @id = "lblStatus" })
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a href="@Url.Action("Index", "MstComplaint" )" class="btn btn-default">Back</a>
            </div>
        </div>
        }
    </div>
</section>
<script type="text/javascript">
</script>
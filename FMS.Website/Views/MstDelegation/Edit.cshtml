@using FMS.Core;
@model FMS.Website.Models.DelegationItem

<div class="opt-content clearfloat">
    <h5 class="title-page">Master Data Delegation Edit</h5>
</div>
<section class="content" ng-controller="MSTCCtrl" ng-init="init()">

    <div class="wpanel">
        @using (Html.BeginForm("Edit", "MstDelegation", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Employee From<span class="red">*</span></label>
                        @Html.HiddenFor(model => model.MstDelegationID, new { @class = "form-control" })
                        @Html.HiddenFor(model => model.CreatedBy, new { @class = "form-control" })
                        @Html.HiddenFor(model => model.CreatedDate, new { @class = "form-control" })
                        @Html.DropDownListFor(model => model.EmployeeFrom, Model.EmployeeListFrom, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Employee To<span class="red">*</span></label>
                        @Html.DropDownListFor(model => model.EmployeeTo, Model.EmployeeListTo, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Date From<span class="red">*</span></label>
                        <div class="input-group date">
                            @Html.TextBoxFor(model => model.DateFrom, "{0:dd-MMM-yyyy}", new { @class = "form-control " })
                            <span class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Date To<span class="red">*</span></label>
                        <div class="input-group date">
                            @Html.TextBoxFor(model => model.DateTo, "{0:dd-MMM-yyyy}", new { @class = "form-control " })
                            <span class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                       @Html.CheckBoxFor(model => model.IsComplaintFrom)
                        <label class="control-label"> Is Complaint Form<span class="red">*</span></label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <a target="_blank" href="../files_upload/@Model.Attachment">@Model.Attachment</a>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Attachment<span class="red">*</span></label>
                        @Html.TextBoxFor(model => model.Attachment, new { @type = "file" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.CheckBoxFor(model => model.IsActive)
                        <label class="control-label"> Active <span class="red">*</span></label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a href="@Url.Action("Index", "MstDelegation" )" class="btn btn-default">Back</a>
                </div>
            </div>
        }
    </div>
</section>

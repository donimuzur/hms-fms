@using FMS.Core;
@model FMS.Website.Models.PenaltyItem

<div class="opt-content clearfloat">
    <h5 class="title-page">Master Data Penalty Detail</h5>
</div>
<section class="content">

    <div class="wpanel">
        @using (Html.BeginForm("Edit", "MstPenalty"))
        {
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Vendor<span class="red"></span></label>
                        @Html.DropDownListFor(model => model.Vendor, Model.VendorList, new { @class = "form-control", @disabled="disabled" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Manufacture<span class="red">*</span></label>
                        @Html.HiddenFor(model => model.MstPenaltyId)
                        @Html.HiddenFor(model => model.CreatedBy)
                        @Html.HiddenFor(model => model.CreatedDate)
                        @Html.TextBoxFor(model => model.Manufacturer, new { @class = "form-control", @id = "Manufacturer", @disabled = "disabled"})
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Model<span class="red">*</span></label>
                        @Html.TextBoxFor(model => model.Models, new { @class = "form-control", @disabled = "disabled" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Series<span class="red">*</span></label>
                        @Html.TextBoxFor(model => model.Series, new { @class = "form-control", @disabled = "disabled" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Body Type<span class="red">*</span></label>
                        @Html.TextBoxFor(model => model.BodyType, new { @class = "form-control", @disabled = "disabled" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Request Year<span class="red">*</span></label>
                        @Html.TextBoxFor(model => model.Year, new { @class = "form-control", @disabled = "disabled" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Minimum Remaining Lease Term (Months)<span class="red">*</span></label>
                        @Html.TextBoxFor(model => model.MonthStart, new { @class = "form-control", @disabled = "disabled" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Maximum Remaining Lease Term (Months)<span class="red">*</span></label>
                        @Html.TextBoxFor(model => model.MonthEnd, new { @class = "form-control", @disabled = "disabled" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Vehicle Type<span class="red">*</span></label>
                        @*@Html.TextBoxFor(model => model.VehicleType, new { @class = "form-control" })*@
                        @Html.DropDownListFor(model => model.VehicleType, Model.VehicleList, new { @class = "form-control", @disabled = "disabled" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Penalty<span class="red">*</span></label>
                        @Html.DropDownListFor(model => model.Penalty, Model.PenaltyList, new { @class = "form-control", @onchange = "FillLogic()", @disabled="disabled" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Penalty Logic<span class="red">*</span></label>
                        @Html.TextBoxFor(model => model.PenaltyLogic, new { @class = "form-control", @disabled = "disabled" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Status<span class="red"> </span></label>
                        <div class="form-control" disabled="disabled">
                            @Html.CheckBoxFor(model => model.IsActive, new { @disabled = "disabled" })
                            @Html.Label("Active", new { @id = "lblStatus" })
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <a href="@Url.Action("Index", "MstPenalty" )" class="btn btn-default">Back</a>
                </div>
            </div>
        }
    </div>
    <div id="changes" class="tab-pane">
        @Html.Partial("_ChangesLog");
    </div>
</section>
<script type="text/javascript">
     function IsAngka(evt) {
         var charCode = (evt.which);
         if (charCode > 31 && (charCode < 48 || charCode > 57)) {
             return false;
         } return true;
     }
</script>
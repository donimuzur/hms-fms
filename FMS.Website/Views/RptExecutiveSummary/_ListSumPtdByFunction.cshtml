@using FMS.Core
@model FMS.Website.Models.SumPtdByFunctionModel

<table id="tbSumPtdByFunction" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Vehicle Type</th>
            <th>Regional</th>
            <th>Function</th>
            <th>Month</th>
            <th>Year</th>
            <th>Total Vehicle</th>
            <th>Total Vehicle Cost</th>
            <th>Total Fuel Amount</th>
            <th>Total Fuel Cost</th>
            <th>Total KM</th>
            <th>Total Operational Cost</th>
            <th>Accident Count</th>
        </tr>
    </thead>
    <thead class="filters">
        <tr>
            <th><input type="text" style="border-radius: 7px; text-align: center; width: 100%" placeholder="Search" /></th>
            <th><input type="text" style="border-radius: 7px; text-align: center; width: 100%" placeholder="Search" /></th>
            <th><input type="text" style="border-radius: 7px; text-align: center; width: 100%" placeholder="Search" /></th>
            <th><input type="text" style="border-radius: 7px; text-align: center; width: 100%" placeholder="Search" /></th>
            <th><input type="text" style="border-radius: 7px; text-align: center; width: 100%" placeholder="Search" /></th>
            <th><input type="text" style="border-radius: 7px; text-align: center; width: 100%" placeholder="Search" /></th>
            <th><input type="text" style="border-radius: 7px; text-align: center; width: 100%" placeholder="Search" /></th>
            <th><input type="text" style="border-radius: 7px; text-align: center; width: 100%" placeholder="Search" /></th>
            <th><input type="text" style="border-radius: 7px; text-align: center; width: 100%" placeholder="Search" /></th>
            <th><input type="text" style="border-radius: 7px; text-align: center; width: 100%" placeholder="Search" /></th>
            <th><input type="text" style="border-radius: 7px; text-align: center; width: 100%" placeholder="Search" /></th>
            <th><input type="text" style="border-radius: 7px; text-align: center; width: 100%" placeholder="Search" /></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var data in Model.SumPtdByFuncDataList)
        {
            <tr>
                <td>@Html.Raw(data.VehicleType)</td>
                <td>@Html.Raw(data.Region)</td>
                <td>@Html.Raw(data.Function)</td>
                <td>@Html.Raw(data.Month)</td>
                <td>@Html.Raw(data.ReportYear)</td>
                <td>@Html.Raw(data.TotalVehicle)</td>
                <td>@string.Format("{0:N0}", data.TotalVehicleCost)</td>
                <td>@string.Format("{0:N0}", data.TotalFuelAmount)</td>
                <td>@string.Format("{0:N0}", data.TotalFuelCost)</td>
                <td>@string.Format("{0:N0}", data.TotalKm)</td>
                <td>@string.Format("{0:N0}", data.TotalOperationalCost)</td>
                <td>@Html.Raw(data.AccidentCount)</td>
            </tr>
        }
    </tbody>
</table>
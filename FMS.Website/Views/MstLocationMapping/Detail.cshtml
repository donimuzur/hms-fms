
@using FMS.Core
@model FMS.Website.Models.LocationMappingItem

<div class="opt-content clearfloat">
    <h5 class="title-page">Master Data Location Mapping</h5>
</div>
<section class="content">
    <div class="wpanel">
        @using (Html.BeginForm("Edit", "MstLocationMapping"))
        {
            <div class="row col-md-12">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Location<span class="red">*</span></label>
                        @Html.HiddenFor(model => model.MstLocationMappingId)
                        @Html.HiddenFor(model => model.CreatedDate)
                        @Html.HiddenFor(model => model.CreatedBy)
                        @Html.TextBoxFor(model => model.Location,new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Address<span class="red">*</span></label>
                        @Html.TextBoxFor(model => model.Address, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Basetown<span class="red">*</span></label>
                        @Html.TextBoxFor(model => model.Basetown, new { @class = "form-control", @disabled = "disabled" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Region<span class="red">*</span></label>
                        @Html.TextBoxFor(model => model.Region, new { @class = "form-control", @disabled = "disabled" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Zone Sales<span class="red">*</span></label>
                        @Html.TextBoxFor(model => model.ZoneSales, new { @class = "form-control", @disabled = "disabled" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Zone Price List<span class="red">*</span></label>
                        @Html.TextBoxFor(model => model.ZonePriceList, new { @class = "form-control", @disabled = "disabled" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Validity From<span class="red">*</span></label>
                        <div class="input-group date" disabled ="disabled">
                            @Html.TextBoxFor(model => model.ValidFrom, "{0:dd-MMM-yyyy}", new { @class = "form-control ", @disabled = "disabled" })
                            <span class="input-group-addon btn btn-primary" onclick="onValidFrom()">
                                <i class="fa fa-calendar "></i>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group" disabled = "disabled">
                        <label class="control-label">Status<span class="red">*</span></label>
                        <div class="form-control">
                            @Html.CheckBoxFor(model => model.IsActive)
                            @Html.Label("Active", new { @id = "lblStatus" })
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <a href="@Url.Action("Index", "MstLocationMapping" )" class="btn btn-default">Back</a>
                </div>
            </div>
        }
    </div>
    <div id="changes" class="tab-pane">
        @Html.Partial("_ChangesLog");
    </div>
</section>

<script type="text/javascript">
    function CheckIsActive() {
        if (document.getElementById('ChckIsActive').checked == true) {
            document.getElementById('lblStatus').innerHTML = "Active";
        }
        else {
            document.getElementById('lblStatus').innerHTML = "InActive";
        }
    }
    function onValidFrom() {
        $('#ValidFrom').focus();
    }

    $(document).ready(function () {
        $('aside').animate({
            scrollTop: $("#MstLocationMapping").offset().top
        }, 1000);

        if ($('.title-page').html() == 'Master Data Location Mapping') {
            $('#MstLocationMappingMenu').addClass('active');
        }
    });
</script>
@using FMS.Core
@model FMS.Website.Models.TraCrfItemViewModel

<div class="panel panel-default" id="relocationDetails">
    <div id="headingTwo" role="tab" class="panel-heading">
        <h4 class="panel-title">
            <a aria-controls="collapseTwo" aria-expanded="true" href="#collapseTwo" data-parent="#accordion" data-toggle="collapse">
                Relocated Vehicle Info
                <i class="fa fa-caret-down"></i>
            </a>
        </h4>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    <div aria-labelledby="headingTwo" role="tabpanel" class="panel-collapse collapse show" id="collapseTwo">
        <div class="panel-body">
            <div role="form" class="form-excise">
                <div class="col-md-12">
                    <div class="box-tools pull-right" style="margin-top:-50px">
                        <h4>
                            <label for="" class="control-label">Status:</label>
                            <label class="control-label">@Html.Raw(Model.Detail.DocumentStatusString)</label>
                        </h4>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-12">
                                    <h5>Relocation Type</h5>
                                    <hr />
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Relocation Type</label>
                                        
                                        
                                        
                                         @if (Model.Detail.VehicleType == "WTC")
                                         {
                                             
                                            @Html.HiddenFor(model => model.Detail.RelocationType, new { @value = "RELOCATE_UNIT" })
                                            @*@Html.TextBoxFor(model => model.Detail.RelocationType, "RELOCATE_UNIT", new { @class = "form-control", @disabled = "disabled" })*@
                                            <input type="text" class="form-control" disabled="disabled" value="Relocate Unit" required="required" />
                                         }
                                         else if (Model.Detail.VehicleUsage == "CFM")
                                         {
                                            @Html.DropDownListFor(model => model.Detail.RelocationType, Model.RelocateList, "-- Please Select --", new { @class = "form-control", @onchange = "GetRelocation(this)", @required = "required" })
                                         }
                                         else
                                         {
                                             @Html.HiddenFor(model => model.Detail.RelocationType, new { @value = "RELOCATE_UNIT" })
                                             @*@Html.TextBoxFor(model => model.Detail.RelocationType, "RELOCATE_UNIT", new { @class = "form-control", @disabled = "disabled" })*@
                                            <input type="text" class="form-control" disabled="disabled" value="Relocate Unit" />
                                         }
                                        

                                    </div>
                                </div>
                                
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Change Police Number</label>

                                        @*<input type="checkbox" id="changePolice" onchange="changePoliceNumberCheck()"  />*@
                                        @Html.CheckBoxFor(model => model.Detail.ChangePoliceNumber, new { @id = "changePolice", @onclick = "changePoliceNumberCheck()" })
                                        @*@if (@Model.CurrentLogin.UserRole == Enums.UserRole.Fleet)
                {

                    @Html.TextBoxFor(model => model.Detail.ChangePoliceNumber, new { @class = "form-control", @readonly = "readonly", @id = "changePoliceNumber" })
                }*@


                                    </div>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                    @if (Model.CurrentLogin.EMPLOYEE_ID == Model.Detail.EmployeeId)
                    {
                        <div class="row">
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-md-12">
                                        <h5>Deliverable Information</h5>
                                        <hr />
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="control-label">City*</label>
                                            @Html.TextBoxFor(model => model.Detail.DeliveryCity, new { @class = "form-control relocate", @required = "required" })

                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="control-label">Address*</label>
                                            @Html.TextBoxFor(model => model.Detail.DeliveryAddress, new { @class = "form-control relocate", @required = "required" })

                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="control-label">PIC Name</label>
                                            @Html.TextBoxFor(model => model.Detail.DeliveryPic, new { @class = "form-control relocate" })

                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="control-label">PIC Phone</label>
                                            @Html.TextBoxFor(model => model.Detail.DeliveryPhone, new { @class = "form-control relocate" })

                                        </div>
                                    </div>
                                    

                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-md-12">
                                        <h5>Withdrawal Information</h5>
                                        <hr />
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="control-label">City*</label>
                                            @Html.TextBoxFor(model => model.Detail.WithdCity, new { @class = "form-control relocate", @required = "required" })

                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="control-label">Address*</label>
                                            @Html.TextBoxFor(model => model.Detail.WithdAddress, new { @class = "form-control relocate", @required = "required" })

                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="control-label">PIC Name</label>
                                            @Html.TextBoxFor(model => model.Detail.WithdPic, new { @class = "form-control relocate" })

                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="control-label">PIC Phone</label>
                                            @Html.TextBoxFor(model => model.Detail.WithdPhone, new { @class = "form-control relocate"})

                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="control-label">Date/Time*</label>
                                            <div class="input-group datetime">
                                                @Html.TextBoxFor(model => model.Detail.WithdDateTime, "{0:dd-MMM-yyyy hh:mm}", new { @class = "form-control ", @required = "required" })
                                                <span class="input-group-addon">
                                                    <i class="fa fa-calendar"></i>

                                                </span>
                                            </div>

                                        </div>
                                    </div>


                                </div>
                            </div>

                        </div>
                    }
                   
                    
                </div>
                
                
            </div>
            
        </div>
        
       
        <div class="box-footer"></div>
    </div>
</div>

